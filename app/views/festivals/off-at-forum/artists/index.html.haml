- title "#{@festival.name} - Artists"

.left
  %p= @festival.menu_title_artists
.section.artists.artists-covers.normalizer
  .container
    .row
      - @festival.events.each do |event|
        .col-md-12.animate-box{"data-animate-effect" => "fadeInUp"}
          .row
            %h2
              = l(event.starts_on.to_date, format: '%B %d, %Y')
              %span 
                #{event.name}
          .row
            - event.artists.each do |artist|
              .col-sm-6.col-md-4
                = link_to artist_path(artist), class: 'artist' do
                  .row
                    .col-md-10.cover
                      .row
                        = image_tag(artist.image.url(:small), class: 'img-responsive')
                  .row
                    %h2= artist.name
