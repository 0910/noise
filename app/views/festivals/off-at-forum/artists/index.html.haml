- title "#{@festival.name} - Artists"

.left
  %p= @festival.menu_title_artists
.section.artists.normalizer
  .container
    .row
      - @artists.each do |artist|
        .col-sm-12.col-md-4.animate-box.item{"data-animate-effect" => "fadeInUp"}
          = link_to artist_path(artist), class: 'artist' do
            .row
              .col-md-10.cover
                .row
                  = image_tag(artist.image.url(:small), class: 'img-responsive')
            .row
              %h2= artist.name
:javascript
  $('.section').eq(0).find('.animate-box').each(function(){
    $(this).addClass('fadeInUp animated-fast');
  });
