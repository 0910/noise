:javascript

    var contentWayPoint = function() {
      var i = 0;
      $('.animate-box').waypoint( function( direction ) {

        if( direction === 'down' && !$(this.element).hasClass('animated-fast') ) {
          
          i++;

          $(this.element).addClass('item-animate');
          setTimeout(function(){

            $('body .animate-box.item-animate').each(function(k){
              var el = $(this);
              setTimeout( function () {
                var effect = el.data('animate-effect');
                if ( effect === 'fadeIn') {
                  el.addClass('fadeIn animated-fast');
                } else if ( effect === 'fadeInLeft') {
                  el.addClass('fadeInLeft animated-fast');
                } else if ( effect === 'fadeInRight') {
                  el.addClass('fadeInRight animated-fast');
                } else {
                  el.addClass('fadeInUp animated-fast');
                }

                el.removeClass('item-animate');
              },  k * 200, 'easeInOutExpo' );
            });
            
          }, 100);
          
        }

      } , { offset: '85%' } );
    };

    $(function(){
      contentWayPoint();

      $(window).bind('scroll', function(e){
        var distanceY = $(window).scrollTop();
        if (distanceY > 50) {
            $('#header').addClass('scrolled');
        }
        else {
          $('#header').removeClass('scrolled');
        }
      });

      $('.subscribe, .subscribe-button').click(function(){
        $('.subscribe').toggleClass('active');
      });

      $('.swipebox').swipebox({ autoplayVideos: true });

      $('#fullpage').fullpage({
        scrollOverflow: true,
        onLeave: function(index, nextIndex, direction){
          var leavingSection = $(this);
          var newSection = nextIndex - 1;
          console.log(newSection);
          $('.section').eq(leavingSection).find('.animate-box').each(function(k){
            var el = $(this);
            setTimeout( function () {
              el.removeClass('animated-fast');
            },  k * 200, 'easeInOutExpo' );
          });
          $('.section').eq(newSection).find('.animate-box').each(function(k){
            var el = $(this);
            setTimeout( function () {
              var effect = el.data('animate-effect');
              if ( effect === 'fadein') {
                el.addclass('fadein animated-fast');
              } else if ( effect === 'fadeinleft') {
                el.addclass('fadeinleft animated-fast');
              } else if ( effect === 'fadeInRight') {
                el.addClass('fadeInRight animated-fast');
              } else {
                el.addClass('fadeInUp animated-fast');
              }
            },  k * 200, 'easeInOutExpo' );
          });
        }
      });

    });
